mixin loginPopup
    .popup.popup-login#login
        .popup__wrapper
            .popup__close
                a(href="#close"): +icons('#ic_popup-close', 20)
            .popup__content
                form.form.popup__form.popup-login__form
                    .popup-login__image
                        picture
                            source(srcset="img/logo.webp" type="image/webp")
                            img.lazyload(loading="lazy" data-src="img/logo.png" width=140 height=140)
                    .form__title.section-h3 Войти
                    .form__fields
                        .form__field
                            span.label Адрес электронной почты
                            .input.input-email
                                input(type="email" placeholder="")
                        .form__field
                            span.label Пароль
                            .input.input-password
                                input(type="password" placeholder="")
                    .form__submit
                        button.btn.btn-primary Войти
                    .form__links
                        .form__link: a(href="#") Забыли пароль?
                        .form__link
                            | Еще не зарегистрировались?&nbsp;
                            a(href="#") Регистрация
