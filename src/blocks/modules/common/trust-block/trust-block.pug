                img.lazyload(loading="lazy" data-src="img/trust/4.jpg")
            li.splide__slide
              picture
                source(srcset="img/trust/5.webp" type="image/webp")
                img.lazyload(loading="lazy" data-src="img/trust/5.jpg")
            li.splide__slide
              picture
                source(srcset="img/trust/6.webp" type="image/webp")
                img.lazyload(loading="lazy" data-src="img/trust/6.jpg")
          .trust-block__arrows.slider-nav.splide__arrows
            button.trust-block__arrow.slider-nav__arrow.splide__arrow.splide__arrow--prev
              include ../../../../img/svg/ic_arrow-left.svg
            button.trust-block__arrow.slider-nav__arrow.splide__arrow.splide__arrow--next
              span Далее
