extends ../layouts/default-1
include ../helpers/mixins
include ../../blocks/components/breadcrumbs/breadcrumbs.pug
include ../../blocks/components/form/form.pug
include ../../blocks/components/checkbox/checkbox.pug
include ../../blocks/components/headers/headers.pug
include ../../blocks/components/table/table.pug
include ../../blocks/components/popup/popup.pug
include ../../blocks/modules/common/page-banner/page-banner


block variables
    - const title = "Главная"
block styles
block content

    .page-breadcrumbs
        .container
            +breadcrumb(
                [
                    {
                        link: "/",
                        text: "Главная",
                    },
                    {
                        link: "/",
                        text: "Страница не найдена",
                        isActive: true,
                    },
                ]
            )

    section.not-found
      .container
        .not-found__text
          h1.not-found__title.section-h1 Страница не найдена
          .not-found__desc К сожалению, запрашиваемая страница не найдена. Возможно, вы ошиблись адресом или страница была удалена
          .not-found__caption Проверьте правильность введеного адреса или вы можете вернуться на главную страницу
          a(href="/").not-found__link.btn.btn-primary На главную страницу
        .not-found__image: img(src="img/404.svg")

block scripts
    script(src="js/main.js")