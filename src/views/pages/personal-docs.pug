extends ../layouts/default-1
include ../helpers/mixins
include ../../blocks/components/breadcrumbs/breadcrumbs.pug
include ../../blocks/components/form/form.pug
include ../../blocks/components/checkbox/checkbox.pug
include ../../blocks/components/headers/headers.pug
include ../../blocks/components/table/table.pug
include ../../blocks/components/popup/popup.pug
include ../../blocks/modules/common/page-banner/page-banner


block variables
    - const title = "Главная"
block styles
    link(rel="stylesheet" href="styles/personal.css")
block content

    .page-breadcrumbs
        .container
            +breadcrumb(
                [
                    {
                        link: "/",
                        text: "Главная",
                    },
                    {
                        link: "/",
                        text: "Личный кабинет",
                        isActive: true,
                    },
                    {
                        link: "/",
                        text: "Справочная информация",
                        isActive: true,
                    },
                ]
            )

    section.personal-block
        .container
            h1.personal-block__title.section-h1 Справочная информация
            .personal-block__sidebar
                .personal-block__company
                    .personal-block__company-name ООО "Масла России"
                    .personal-block__company-phone
                        span Контактный телефон
                        a(href="#") +7 123 456-78-90
                    .personal-block__company-email
                        span Электронная почта
                        a(href="#") oooilrussia@gmail.com
                ul.personal-block__menu
                    li.personal-block__menu-item: a(href="#").personal-block__menu-link Информация о компании
                    li.personal-block__menu-item: a(href="#").personal-block__menu-link Сертификаты и допуски
                    li.personal-block__menu-item: a(href="#").personal-block__menu-link.is-active Справочная информация
                    li.personal-block__menu-item: a(href="#").personal-block__menu-link Телефонный справочник
                .personal-block__logout
                    a(href="#").btn.btn-primary Выход
            .personal-block__content
                .personal-docs
                    .personal-docs__toggles
                        .personal-docs__toggle.btn.btn-secondary.is-active(data-tab="1") Ассортиментные листы
                        .personal-docs__toggle.btn.btn-secondary(data-tab="2") Каталог продукции
                        .personal-docs__toggle.btn.btn-secondary(data-tab="3") Фото с конференции
                    .personal-docs__tabs
                        .personal-docs__tab(data-tab="1").is-active
                            .personal-docs__items
                                .personal-docs__item
                                    .personal-docs__item-icon: img(src="img/svg/ic_docs.svg" width=48 height=48)
                                    .personal-docs__item-text
                                        .personal-docs__item-name Текущая оценка деятельности поставщика Сибур-Холдинг
                                        .personal-docs__item-get
                                            span PDF, размер файла: (59,13kb)
                                            a(href="#") Скачать
                                .personal-docs__item
                                    .personal-docs__item-icon: img(src="img/svg/ic_docs.svg" width=48 height=48)
                                    .personal-docs__item-text
                                        .personal-docs__item-name Оценка поставщика Сибур-Холдинг
                                        .personal-docs__item-get
                                            span PDF, размер файла: (59,13kb)
                                            a(href="#") Скачать
                                .personal-docs__item
                                    .personal-docs__item-icon: img(src="img/svg/ic_docs.svg" width=48 height=48)
                                    .personal-docs__item-text
                                        .personal-docs__item-name Анкета для самооценки поставщиков
                                        .personal-docs__item-get
                                            span PDF, размер файла: (59,13kb)
                                            a(href="#") Скачать
                                .personal-docs__item
                                    .personal-docs__item-icon: img(src="img/svg/ic_docs.svg" width=48 height=48)
                                    .personal-docs__item-text
                                        .personal-docs__item-name Оценка поставщика Сибур-Холдинг
                                        .personal-docs__item-get
                                            span PDF, размер файла: (59,13kb)
                                            a(href="#") Скачать
                                .personal-docs__item
                                    .personal-docs__item-icon: img(src="img/svg/ic_docs.svg" width=48 height=48)
                                    .personal-docs__item-text
                                        .personal-docs__item-name Текущая оценка деятельности поставщика Сибур-Холдинг
                                        .personal-docs__item-get
                                            span PDF, размер файла: (59,13kb)
                                            a(href="#") Скачать
                        .personal-docs__tab(data-tab="2")
                        .personal-docs__tab(data-tab="3")

block scripts
    script(src="js/main.js")
    script(src="js/personal.js")