extends ../layouts/default-1
include ../helpers/mixins
include ../../blocks/components/breadcrumbs/breadcrumbs.pug
include ../../blocks/components/form/form.pug
include ../../blocks/components/checkbox/checkbox.pug
include ../../blocks/components/headers/headers.pug
include ../../blocks/components/table/table.pug
include ../../blocks/components/popup/popup.pug
include ../../blocks/modules/common/page-banner/page-banner


block variables
    - const title = "Главная"
block styles
block content

    .page-breadcrumbs
        .container
            +breadcrumb(
                [
                    {
                        link: "/",
                        text: "Главная",
                    },
                    {
                        link: "/",
                        text: "Публикации",
                    },
                    {
                        link: "/",
                        text: "Космонавт Иван Вагнер встретился с командой «Тосол-Синтез-Инвест»",
                        isActive: true,
                    },
                ]
            )

    section.articles-detail
        .container
            h1.articles-detail__title.section-h1 Космонавт Иван Вагнер встретился с командой «Тосол-Синтез-Инвест»
            a(href="#").articles-detail__back
                +icons('#ic_prev', 12)
                span Вернуться к списку публикаций
            .articles-detail__date 31 января 2022
            .articles-detail__content.edit-content
                picture
                    source(srcset="img/detail/article-1.webp" type="image/webp")
                    img.lazyload(loading="lazy" data-src="img/detail/article-1.jpg")
                p
                    strong.
                        «Тосол-Синтез-Инвест» стал призером Всероссийского чемпионата по производительности труда.Чемпионат проводился в ноябре 2021 года в рамках программы подготовки управленческих кадров национального проекта «Производительность труда». Команда «Тосол-Синтез-Инвест» заняла призовое 3 место, а наградой стала встреча с космонавтом-испытателем Иваном Вагнером.
                p В рамках Всероссийского чемпионата по производительности труда сотрудники компаний обучались инструментам повышения производительности и открывали новые возможности для модернизации бизнес-процессов. После окончания программы участники разрабатывали проекты улучшений для своих предприятий и внедряли их на производстве.
                p Участник действующего отряда космонавтов Иван Вагнер рассказал, как проходит подготовка к работе на Международной космической станции, своем пути к полету в космос и поделился секретами эффективного командного взаимодействия.
                p «В космосе – как в бизнесе: слаженная командная работа полностью определяет результат. Ведь полет начинается не с момента запуска корабля с космодрома, а намного раньше, поэтому предварительные тренировки и психологическая подготовка играют важнейшую роль. На борту команда уже должна быть единым организмом: иметь общее видение цели, чёткое понимание своей функции и тактики действий, правильную мотивацию», — поделился Иван Вагнер.
                p Мы благодарим Ивана за интересную встречу и увлекательный рассказ о жизни космонавтов.


    section.homepage-press.articles-more.js-articles-more.splide
        .container
            .homepage-press__title.articles-more__title.section-h2 Читайте также
            .articles-more__arrows.splide__arrows.slider-nav
                button.articles-more__arrow.slider-nav__arrow.splide__arrow.splide__arrow--prev
                    include ../../img/svg/ic_arrow-left.svg
                button.articles-more__arrow.slider-nav__arrow.splide__arrow.splide__arrow--next
                    span Далее
                    include ../../img/svg/ic_arrow-right.svg

            .splide__track
                -
                    var list = [

                        {
                            image: "img/home/press-1",
                            date: "31 января 2022",
                            name: "«Тосол-Синтез» на международной выставке Automechanika Dubai 2021",
                            desc: "Компания «Тосол-Синтез» представила бренд FELIX международной выставке автомобильной промышленности Automechanika Dubai 2021. Выставка прошла во Всемирном торговом центре Дубая в декабре 2021 года."
                        },

                        {
                            image: "img/home/press-2",
                            date: "31 января 2022",
                            name: "Чем заменить импортные OEM-антифризы?",
                            desc: "В данной статье предлагаем вашему вниманию линейку антифризов FELIX, которые на 100% могут заменить оригинальные жидкости практически для любого автомобиля. Рассмотрим преимущества, и предоставим две таблицы: с соответствием импортных брендов к линейке FELIX и подробную таблицу применяемости по марке авто."
                        },

                        {
                            image: "img/home/press-3",
                            date: "31 января 2022",
                            name: "Конференция региональных менеджеров - 2022",
                            desc: "С 13 по 15 апреля компания «Тосол-Синтез» провела ежегодную конференцию региональных менеджеров, в которой приняли участие более 50 сотрудников компании из России и СНГ. В ходе конференции обсудили тенденции развития в текущей экономической ситуации, подвели итоги."
                        },

                    ]

                ul.splide__list
                    each item in list
                        li.splide__slide.homepage-press__item.articles-more__item
                            a(href="#").homepage-press__item-image.articles-more__item-image
                                picture
                                    source(srcset=item.image + ".webp" type="image/webp")
                                    img.lazyload(loading="lazy" data-src=item.image + ".jpg")
                            .homepage-press__item-content.articles-more__item-content
                                .homepage-press__item-date.articles-more__item-date=item.date
                                a(href="#").homepage-press__item-name.articles-more__item-name=item.name
                                .homepage-press__item-desc.articles-more__item-desc=item.desc

    include ../../blocks/modules/common/mail-block/mail-block

    
block scripts
    script(src="js/main.js")
    script(src="js/articles.js")