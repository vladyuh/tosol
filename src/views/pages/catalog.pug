                        }

                    ]

                each item in list
                    .homepage-products__item.products-block__item
                        .homepage-products__item-image.products-block__item-image
                            picture
                                source(srcset=item.image + ".webp" type="image/webp")
                                img.lazyload(loading="lazy" data-src=item.image + ".jpg")
                        a(href=item.link).homepage-products__item-content.products-block__item-content
                            span.homepage-products__item-name.products-block__item-name=item.name
                            span.homepage-products__item-link.products-block__item-link: include ../../img/svg/ic_arrow-right-gray.svg


