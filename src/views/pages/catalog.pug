block variables
    - const title = "Главная"
block styles
block content

    .page-breadcrumbs
        .container
            +breadcrumb(
                [
                    {
                        link: "/",
                        text: "Главная",
                    },
                    {
                        link: "/",
                        text: "Каталог продукции",
                        isActive: true,
                    },
                ]
            )


    section.homepage-products.products-block
        .container
            h1.homepage-products__title.products-block__title.section-h1 Каталог продукции
            .homepage-products__items.products-block__items

                -
                    var list = [

                        {
                            image: "img/home/prod-1",
