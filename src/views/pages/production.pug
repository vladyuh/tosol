extends ../layouts/default-1
include ../helpers/mixins
include ../../blocks/components/breadcrumbs/breadcrumbs.pug
include ../../blocks/components/form/form.pug
include ../../blocks/components/checkbox/checkbox.pug
include ../../blocks/components/headers/headers.pug
include ../../blocks/components/table/table.pug
include ../../blocks/components/popup/popup.pug
include ../../blocks/modules/common/page-banner/page-banner


block variables
    - const title = "Главная"
block styles
block content

    +pageBanner({
        links: [
            {
                link: "/",
                text: "Главная",
            },
            {
                link: "/",
                text: "Контрактное производство",
                isActive: true,
            },
        ],
        title: "Контрактное производство",
        text: "Компания «Тосол-Синтез» - один&nbsp;из&nbsp;крупнейших <br>производителей качественной автохимии<br> мирового уровня",
        image: "img/production"
    })

    .coop-block
        .container
            .coop-block__caption Сотрудничая с нами, вы получите качественную продукцию под собственным брендом без затрат на сырье, обучение персонала и производственные площади.

    section.advantages-block
        .container
            .advantages-block__title.section-h2 Наши премущества
            .advantages-block__items
                -
                    var list = [
                        {
                            text: "Производство качественной автохимии мирового уровня с 1993 года",
                            image: "img/production/adv-1"
                        },
                        {
                            text: "Современное оборудование и квалифицированный  персонал",
                            image: "img/production/adv-2"
                        },
                        {
                            text: "Собственная акредитованная лаборатория",
                            image: "img/production/adv-3"
                        },
                        {
                            text: "Высокий уровень автоматизации производственных процессов",
                            image: "img/production/adv-4"
                        },
                        {
                            text: "Отлаженная система контроля качества",
                            image: "img/production/adv-5"
                        },
                        {
                            text: "Стандарты ISO и сертификация",
                            image: "img/production/adv-6"
                        }
                    ]
                    
                each item in list
                    .advantages-block__item
                        .advantages-block__item-image
                            picture
                                source(srcset=item.image + ".webp" type="image/webp")
                                img.lazyload(loading="lazy" data-src=item.image + ".jpg")
                        a(href="#").advantages-block__item-content
                            span.advantages-block__item-name=item.text


    section.order-block
        .container
            .order-block__title.section-h2 Произведем по вашему заказу
            .order-block__items
                .order-block__item
                    .order-block__item-name.section-h5 Масло
                    .order-block__item-image
                        picture
                            source(srcset="img/can-1.webp" type="image/webp")
                            img.lazyload(loading="lazy" data-src="img/can-1.png")
                    .order-block__item-options
                        .order-block__item-option
                            img.lazyload(loading="lazy" data-src="img/option-1.svg" width=36 height=36)
                            span 5 л
                        .order-block__item-option
                            img.lazyload(loading="lazy" data-src="img/option-2.svg" width=36 height=36)
                            span 20 л
                        .order-block__item-option
                            img.lazyload(loading="lazy" data-src="img/option-3.svg" width=36 height=36)
                            span 180 кг
                    .order-block__item-btn
                        a(href="#").btn.btn-primary Оставить заявку
                .order-block__item
                    .order-block__item-name.section-h5 Антифриз
                    .order-block__item-image
                        picture
                            source(srcset="img/can-2.webp" type="image/webp")
                            img.lazyload(loading="lazy" data-src="img/can-2.png")
                    .order-block__item-options
                        .order-block__item-option
                            img.lazyload(loading="lazy" data-src="img/option-1.svg" width=36 height=36)
                            span 5 л
                        .order-block__item-option
                            img.lazyload(loading="lazy" data-src="img/option-2.svg" width=36 height=36)
                            span 20 л
                    .order-block__item-btn
                        a(href="#").btn.btn-primary Оставить заявку
                .order-block__item
                    .order-block__item-name.section-h5 Тосол
                    .order-block__item-image
                        picture
                            source(srcset="img/can-2.webp" type="image/webp")
                            img.lazyload(loading="lazy" data-src="img/can-2.png")
                    .order-block__item-options
                        .order-block__item-option
                            img.lazyload(loading="lazy" data-src="img/option-1.svg" width=36 height=36)
                            span 5 л
                        .order-block__item-option
                            img.lazyload(loading="lazy" data-src="img/option-2.svg" width=36 height=36)
                            span 20 л
                    .order-block__item-btn
                        a(href="#").btn.btn-primary Оставить заявку
                .order-block__item
                    .order-block__item-name.section-h5 Тормозная жидкость
                    .order-block__item-image
                        picture
                            source(srcset="img/can-4.webp" type="image/webp")
                            img.lazyload(loading="lazy" data-src="img/can-4.png")
                    .order-block__item-options
                        .order-block__item-option
                            img.lazyload(loading="lazy" data-src="img/option-0.svg" width=36 height=36)
                            span 1 л
                        .order-block__item-option
                            img.lazyload(loading="lazy" data-src="img/option-1.svg" width=36 height=36)
                            span 5 л
                    .order-block__item-btn
                        a(href="#").btn.btn-primary Оставить заявку



    include ../../blocks/modules/common/gallery-block/gallery-block

    include ../../blocks/modules/common/trust-block/trust-block

    include ../../blocks/modules/common/cert-block/cert-block

    include ../../blocks/modules/common/quest-block/quest-block

    
block scripts
    script(src="js/main.js")
    script(src="js/production.js")